<%- include("header.ejs")%>
<%- include("nav.ejs")%>
<style>
    *{
        padding: 0;
        margin: 0;
        box-sizing: border-box;
    }
    html, body{
        width: 100%;
        height: 100%;
    }
    #main {
font-family: Arial, sans-serif;
background-color: #f4f4f4;
margin: 0;
display: flex;
justify-content: center;
align-items: center;
height: 100vh;
}

.container {
background-color: #fff;
padding: 20px;
border-radius: 5px;
box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
width: 400px;
}

h1 {
text-align: center;
margin-bottom: 20px;
}

form {
display: flex;
flex-direction: column;
align-items: stretch;
}

input[type="file"],
input[type="text"],
textarea {
padding: 10px;
margin-bottom: 10px;
border: 1px solid #ccc;
border-radius: 5px;
box-sizing: border-box;
}

button {
background-color: #4caf50;
color: #fff;
padding: 10px 20px;
border: none;
border-radius: 5px;
cursor: pointer;
transition: background-color 0.3s ease;
text-align: center;
margin-bottom: 2vw;
}

button:hover {
background-color: #45a049;
}

a {
color: #666;
text-decoration: none;
margin-left: 10px;
text-align: center;
}
</style>



    <div id="main">
        <div class="container">
          
          <h1>Create A New Post</h1>
          <form action="/updatepost/<%= data._id %>" method="post" enctype="multipart/form-data">
            <input value="<%= data.image%>" type="file" name="postImage"> <br> <br>
            <input value="<%= data.title%>" type="text" name="title" placeholder="title"> <br> <br>
            <textarea value="<%= data.description%>" name="description" cols="40" rows="6" placeholder="description"></textarea>  <br><br>
            <button>update post</button>
            <a href="/profile">Discard</a>
          </form>
          
        </div>
      </div>



    <%- include("footer.ejs")%>