<%- include('header')%>
<%- include("nav")%>
<link href="https://cdn.jsdelivr.net/npm/remixicon@3.5.0/fonts/remixicon.css" rel="stylesheet">

<style>
  *{
    padding: 0;
    margin: 0;
    box-sizing: border-box;
  }

  html,body{
    width: 100%;
    height: 100%;
  }
  .main{
    width: 100%;
    height: 100%;
    display: flex;
    justify-content: center;
   position: relative;
  }

button{
    position: absolute;
    top: 1vw;
    left: 1vw;
    z-index: 9898;
    color: black;
    text-decoration: none;
    background-color: transparent;
    border: none;
    font-size: 3rem;
  }
  a{
    text-decoration: none;
    color: black;
  }
  
  .main .cards{
    margin-top: 1vw;
  }
  
  .img-div{
  width: 85vw;
  height: 90vh;
  margin-bottom: 1vw;
}

.img-div img{
  width: 100%;
  height: 100%;
  border-radius: 2vw;
  object-fit: cover;
  filter: blur(none); 
}

</style>

<div class="main">
  <button><a href="/feed"><i class="ri-close-fill"></i></a></button>
      <div class="cards">
        <div class="img-div">
          <img src="/images/uploads/<%= posts.postImage%>" alt="">
        </div>
        <h3>Title: <%= posts.title %></h3>
        <h3>Description: <%= posts.description %> </h3>
        
      </div>
  </div><%- include('footer')%>